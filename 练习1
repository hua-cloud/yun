public class Example1 {
	private int i;
	Example1(){//用构造方法对对象进行初始化操作
		this.i = 5;
		System.out.println(i);
	}
	public static void main(String args[]) {
		Example1 s = new Example1();//创建新的对象时就已经完成初始化
	}
}
